{
  "name": "express-ninja",
  "version": "1.7.2",
  "description": "A boilerplate code for Node JS with Express in TypeScript  ",
  "main": "./dist/server.js",
  "scripts": {
    "test": "mocha **/*.spec.js",
    "copy": "copyfiles product/**/*.pem dist/",
    "normal-server": "npm run copy && node ./dist/server.js",
    "nodemon-server": "npm run copy && nodemon ./dist/server.js pem",
    "test-server": "npm run copy && npm run nodemon-server"
  },
  "author": "Abhijit Srivastava",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.10",
    "moment": "^2.22.2",
    "morgan": "^1.9.0",
    "node-fetch": "^2.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jasmine": "^2.8.8",
    "@types/lodash": "^4.14.110",
    "@types/moment": "^2.13.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.5.1",
    "@types/node-fetch": "^2.1.2",
    "copyfiles": "^2.1.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.5",
    "typescript": "^3.0.1"
  }
}
